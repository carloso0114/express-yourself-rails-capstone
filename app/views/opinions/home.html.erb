<div class="d-flex" id="content-wrapper">
  <!-- Sidebar -->
  <%= render 'shared/sidebar_profile' %>
  <!-- Fin sidebar -->

  <div class="w-100">
    <!-- Navbar -->
    <%= render 'shared/navbar' %>
    <!-- Fin Navbar -->

    <!-- Page Content -->
    <div id="content" class="bg-grey w-100">
      <div class="container-fluid">
        <div class="row">
          <!-- Tweets col -->
          <div class="col-9">
            <div class="text-center">
              <h4>What are you thinking?</h4>
              <%= render 'shared/opinion_form' %>
            </div>
            <div>
              <h4>Latest opinions</h4>
              
              <%= render @opinions_posts %>
              
              </div>
          </div>
          <!-- Fin Tweets col -->

          <!-- Who to follow col -->
          <div class="col">
            <div class="text-center">
              <h4>Who to follow</h4>
              <%= render @suggest_people %>
            </div>
          </div>
          <!-- Fin Who to follow col -->
        </div>
      </div>
    </div>
  </div>
</div>
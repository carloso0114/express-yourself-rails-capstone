<div class="d-flex" id="content-wrapper">
  <!-- Sidebar -->
  <%= render 'shared/sidebar_profile' %>
  <!-- Fin sidebar -->

  <div class="w-100">

    <!-- Navbar -->
    <%= render 'shared/navbar' %>
    <!-- Fin Navbar -->

    <!-- Page Content -->
    <div id="content" class="bg-grey w-100">

      <div class="container-fluid">
        <div class="row">
          <!-- Tweets col -->
          <div class="col-9">
            <div>
              <% if @user2.cover.attached? %>
              <%= cl_image_tag @user2.cover.key, :width => 1200, :height => 200, :crop=>"fill" %>
              <% else %>
              <%= cl_image_tag("https://upload.wikimedia.org/wikipedia/commons/b/b9/No_Cover.jpg", :width => 1200, :height => 200, :type=>"fetch") %>
              <% end %>
              <h4 class="text-center">Opinions</h4>
              <div>
                <%= render @own_opinions %>
              </div>
            </div>
            <div>

            </div>
          </div>

          <!-- Fin Tweets col -->

          <!-- User2 profile info -->
            <%= render 'shared/right_sidebar' %>
          <!-- Fin User2 profile info -->
        </div>
      </div>

    </div>

  </div>
</div>